<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kovacszoltan.quizV1.MainMenu"
    android:background="@drawable/android_main_menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingBottom="50dp"
            android:src="@drawable/profile_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_newgame"
            android:background="@drawable/rounded_button1"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_play"
            android:drawableTint="#fff"
            android:textColor="#fff"
            android:text=" Új játék indítása" />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_newgame"
            android:text=" Eredménytábla"
            android:id="@+id/btn_scoreboard"
            android:background="@drawable/rounded_button2"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_trophy"
            android:drawableTint="#fff"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Felhasználónév"
            android:id="@+id/btn_felh_nev"
            android:background="@drawable/rounded_button2"
            android:textColor="#fff"
            android:padding="15dp"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text=" Kilépés"
            android:id="@+id/btn_exit"
            android:background="@drawable/rounded_button2"
            android:textColor="#fff"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:drawableTint="#fff"
            android:layout_marginTop="5dp"
            android:textAlignment="textStart"
            />

    </LinearLayout>

</RelativeLayout>
