<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quizapp.kovacszoltan.quizV1.ScoreBoard">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eredménytábla"
        android:id="@+id/scoretext"
        android:textAlignment="center"
        android:textSize="40dp" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scoretable"
        android:layout_below="@id/scoretext"
        android:stretchColumns="1">>
        <TableRow>
            <TextView
                android:paddingLeft="60dip"
                android:id="@+id/tvuser1"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textSize="30dp"/>
            <TextView
                android:paddingRight="60dip"
                android:id="@+id/tvpont1"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="right"
                android:textSize="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:paddingLeft="60dip"
                android:id="@+id/tvuser2"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textSize="30dp"/>
            <TextView
                android:paddingRight="60dip"
                android:id="@+id/tvpont2"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="right"
                android:textSize="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:paddingLeft="60dip"
                android:id="@+id/tvuser3"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textSize="30dp"/>
            <TextView
                android:paddingRight="60dip"
                android:id="@+id/tvpont3"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="right"
                android:textSize="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:paddingLeft="60dip"
                android:id="@+id/tvuser4"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textSize="30dp"/>
            <TextView
                android:paddingRight="60dip"
                android:id="@+id/tvpont4"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="right"
                android:textSize="30dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:paddingLeft="60dip"
                android:id="@+id/tvuser5"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:textSize="30dp"/>
            <TextView
                android:paddingRight="60dip"
                android:id="@+id/tvpont5"
                android:text="Teszt"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="right"
                android:textSize="30dp"/>
        </TableRow>

    </TableLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Eredmények törlése"
        android:id="@+id/clearscore"/>

</RelativeLayout>
